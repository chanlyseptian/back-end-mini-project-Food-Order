<%- include('headerOrderPage') %>

<div class="container">
    <h1 class="text-center text-warning fw-bold m-5">Order Page
    </h1>
    <div class="card text-center mt-4">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link text-warning" href="">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-warning active" href="">Order Food</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-warning" href="/orders/information/<%=id%>">Order Status</a>
            </li>
            </ul>
        </div>
        <div class="card-body bg-light">
            <h3 class="text-muted mb-4">Order Food</h2>
            <div class="container d-flex justify-content-center">
            <!-- edit form -->
            <form action="/orders/create" method="post">
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput">Your ID</label>
                        <input type="text" class="form-control text-center" id="formGroupExampleInput" placeholder="Customer Name" name="customerId" value="<%= id %>">
                    </div>
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput2">Enter Food ID</label>
                        <input type="number" class="form-control text-center" id="formGroupExampleInput2" placeholder="Customer Key" name="foodId" value="">
                    </div>
              


                    <div class="mt-3">
                        <a href="/orders/information/<%=id%>" class="btn bg-secondary bg-opacity-50 shadow-sm text-white" type="submit"><i class="fa-solid fa-circle-left"></i> Back</a>
                        <button class="btn btn-warning fw-bold text-white shadow-sm" type="submit">Submit</button>
                    </div>
            </form>
            </div>
            


        </div>
    </div>
</div>