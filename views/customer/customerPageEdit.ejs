<%- include('headerCustomerPageEdit') %>

<div class="container">
    <h1 class="text-center text-warning fw-bold m-5">Welcome, <strong><%= customer.name%></strong> !
    </h1>
    <div class="card text-center mt-4">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="#">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-warning" href="/orders/order/<%=customer.id%>">Order Food</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-warning" href="/orders/information/<%=customer.id%>">Order Status</a>
            </li>
            </ul>
        </div>
        <div class="card-body bg-light">
            <h3 class="text-muted mb-4">Edit Information</h2>

            
            <div class="container d-flex justify-content-center">
            <!-- edit form -->
            <form action="/customers/editPage/<%= customer.id %>" method="post">
                    <div class="form-group mb-3 ">
                        <label for="formGroupExampleInput">Name</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Customer Name" name="name" value="<%= customer.name  %> ">
                    </div>
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput2">Key</label>
                        <input type="password" class="form-control" id="formGroupExampleInput2" placeholder="Customer Key" name="key" value="<%= customer.key %>">
                    </div>
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput">Phone Number</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Phone Number" name="phone" value="<%= customer.phone %>">
                    </div>
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput2">Address</label>
                        <input type="text" class="form-control p-4" id="formGroupExampleInput2" name="address" value="<%= customer.address %>">
                    </div>
                    <div>
                        <label class="form-label" for="image">Image<span class="text-danger"> ( *must choose file! ) </span></label>
                        <input type="file" class="form-control" id="image" name="image" />
                    </div>
                    <div class="mt-3">
                        <a href="/customers/customerPage?name=<%=customer.name%>&key=<%=customer.key%>" class="btn bg-secondary bg-opacity-50 shadow-sm text-white" type="submit"><i class="fa-solid fa-circle-left"></i> Back</a>
                        <button class="btn btn-warning fw-bold text-white shadow-sm" type="submit">Submit</button>
                    </div>
            </form>
            </div>
            
        </div>
    </div>
</div>