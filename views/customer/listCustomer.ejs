<!doctype html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


   
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css"/>
    <link rel="stylesheet" href="../css/sb-admin-2.css"/>
    
    <title>Food Order</title>
  </head>
<body>
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-danger sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/admin">
                <div class="sidebar-brand-icon ">
                    <!-- <i class="fa-solid fa-user-plus"></i> -->
                    <i class="fa-solid fa-user-lock"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Admin</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link" href="/admin">
                    <i class="fa-solid fa-file-circle-check"></i>
                    <span>Orders</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Manage Food and Customer
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="/foods"  data-target="#collapseTwo"
                    aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fa-solid fa-utensils"></i>
                    <span>Foods</span>
                </a>
            </li>

            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item active">
                <a class="nav-link collapsed" href="/customers"  data-target="#collapseUtilities"
                    aria-expanded="true" aria-controls="collapseUtilities">
                    <i class="fa-solid fa-people-roof"></i>
                    <span>Customers</span>
                </a>
                
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <li class="nav-item">
                <a class="nav-link collapsed" href="/"  data-target="#collapseUtilities"
                    aria-expanded="true" aria-controls="collapseUtilities">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Logout</span>
                </a>
                
            </li>
                    
        </ul>
        <!-- End of Sidebar -->

    </div>
    
 
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light p-3 mb-3 shadow rounded">
        <div class="container-fluid ">     
            <div class="navbar-nav">
                <a class="nav-link active fw-bold" aria-current="page" href="#">Home</a>
                <a class="nav-link fw-bold" href="#">Customer Page</a>
                <a class="nav-link fw-bold" href="#">   </a>
                <a class="navbar-brand fw-bold" href="">
                    <img src="../images/food.png" alt="" width = "70px"> Food Order
                </a>             
            </div>
        </div>
    </nav>
    <!-- End of Navbar -->
    
    <!-- Tables -->
    <div class="container ">
        <h1 class="text-center text-danger p-4 fw-bold d-flex justify-content-center">Customer List</h1>
        <div class="addFood mx-5 text-left px-3 m-2">
            <a href="/customers/create" type="button" class="btn btn-warning btn-sm btn-rounded mx-5 text-white shadow-sm fw-bold"><i class="fa-solid fa-circle-plus"></i>
            Add Customer
            </a>
        </div>
        <table class="table align-middle mb-0 bg-white tbl text-center">
            <thead class="bg-light bg-opacity-50">
                <tr>
                    <th>Customer ID</th>
                    <th>Profile Picture</th>
                    <th>Name</th>
                    <th>Customer Key</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% customers.forEach(customer => { %>
                <tr>
                    <td>
                        <p class="fw-normal pt-4"><%= customer.id %> </p>
                    </td>
                    <td>
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="../images/<%= customer.image%>" style="width: 60px; height: 58px" class="rounded-circle" alt="image not found"/>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal pt-4"><%= customer.name %></p>
                    </td>
                    <td>
                        <p class="fw-normal pt-4"><%= customer.key %>
                        </p>
                    </td>
                    <td>
                        <p class="fw-normal pt-4"><%= customer.phone %></p>
                    </td>
                    <td>
                        <p class="fw-normal pt-4"><%= customer.address %></p>
                    </td>
                    <td>
                        <a href="/customers/edit/<%=customer.id%>" type="button" class="btn btn-success btn-sm btn-rounded mt-4 shadow-sm">
                        Edit
                        </a>
                         <a href="/customers/delete/<%=customer.id%>" type="button" class="btn btn-danger btn-sm btn-rounded mt-4 shadow-sm">
                        Delete
                        </a>
                    </td>
                </tr>
              <% }) %>
            </tbody>
        </table>
    </div>
    <!-- End of Tables -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>