<!doctype html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


   
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css"/>
    <link rel="stylesheet" href="/css/sb-admin-2.css"/>
    
    <title>Food Order</title>
  </head>
<body>
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-danger sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/admin">
                <div class="sidebar-brand-icon ">
                    <!-- <i class="fa-solid fa-user-plus"></i> -->
                    <i class="fa-solid fa-user-lock"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Admin</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link" href="/admin">
                    <i class="fa-solid fa-file-circle-check"></i>
                    <span>Orders</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Manage Food and Customer
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item active">
                <a class="nav-link collapsed" href="/foods"  data-target="#collapseTwo"
                    aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fa-solid fa-utensils"></i>
                    <span>Foods</span>
                </a>
            </li>

            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="/customers"  data-target="#collapseUtilities"
                    aria-expanded="true" aria-controls="collapseUtilities">
                    <i class="fa-solid fa-people-roof"></i>
                    <span>Customers</span>
                </a>
                
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <li class="nav-item">
                <a class="nav-link collapsed" href="/"  data-target="#collapseUtilities"
                    aria-expanded="true" aria-controls="collapseUtilities">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Logout</span>
                </a>
                
            </li>
                    
        </ul>
        <!-- End of Sidebar -->

    </div>
    
 
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light p-3 mb-3 shadow rounded">
        <div class="container-fluid ">     
            <div class="navbar-nav">
                <a class="nav-link active fw-bold" aria-current="page" href="#">Home</a>
                <a class="nav-link fw-bold" href="#">Customer Page</a>
                <a class="nav-link fw-bold" href="#">   </a>
                <a class="navbar-brand fw-bold" href="">
                    <img src="/images/food.png" alt="" width = "70px"> Food Order
                </a>             
            </div>
        </div>
    </nav>
    <!-- End of Navbar -->

    <!-- Add Food -->
    <div class="container ">
        <h1 class="text-center text-danger p-4 fw-bold d-flex justify-content-center">Edit Food</h1>

        <div class="mx-5 px-5">

            <div class="mx-5 px-5">
                <form action="/foods/edit/<%= food.id %>" method="post">
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput">Name</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Food Name" name="name" value="<%= food.name %>">
                    </div>
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput2">Price</label>
                        <input type="number" class="form-control" id="formGroupExampleInput2" placeholder="Food Price" name="price" value="<%= food.price %>">
                    </div>
                    <div>
                        <label class="form-label" for="image"><%= food.image %></label>
                        <input type="file" class="form-control hidden" id="image" name="image"/>
                    </div>
                    <div class="mt-3">
                        <a href="/foods" class="btn bg-secondary bg-opacity-50 shadow-sm text-white" type="submit"><i class="fa-solid fa-circle-left"></i> Back</a>
                        <button class="btn btn-warning fw-bold text-white shadow-sm" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
    <!-- End of Add Food -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>